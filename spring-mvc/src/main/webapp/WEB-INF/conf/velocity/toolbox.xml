<?xml version="1.0" encoding="UTF-8"?>
<toolbox>
	<!-- http://velocity.apache.org/tools/releases/2.0/summary.html -->
	<tool>
		<key>date</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.DateTool</class>
	</tool>
	<tool>
		<key>display</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.DisplayTool</class>
	</tool>
	<tool>
		<key>math</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.MathTool</class>
	</tool>
	<tool>
		<key>escape</key>
		<scope>application</scope>
		<class>org.apache.velocity.tools.generic.EscapeTool</class>
	</tool>
	<tool>
        <key>text</key>
		<scope>request</scope>
		<class>org.apache.velocity.tools.generic.ResourceTool</class>
		<!-- 路径相对与classPath ,value:为基名，例如：path/resource_zh_CN.properties,resource_us_en.properties,则基名为：path.resource-->
		<parameter name="bundles" value="resource.page_text"/>
	</tool>
</toolbox>
